{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2024", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@features/*": ["features/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@state/*": ["state/*"],
      "@sell/*": ["sell/*"],
      "@init/*": ["init/*"]
    }
  },
  "include": ["src"]
}
